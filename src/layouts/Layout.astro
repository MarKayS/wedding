---
import Navbar from "@components/nav/Navbar.astro";
import Footer from "@components/Footer.astro";
import { siteConfig } from "@lib/config";

import "../styles/global.css";
import SEOmeta from "@components/SEOmeta.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title = siteConfig.title, description, image } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />

    <SEOmeta title={title} description={description} image={image} />
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.8/dist/cdn.min.js" defer></script>
  
  </head>
</html>
<body x-data="{scrolled: false}" x-init="$watch('scrolled', value => console.log(value))">
  <Navbar />
  <slot />
</body>
