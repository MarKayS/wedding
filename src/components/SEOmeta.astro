---
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { title = "Marek & Maru", description, image, canonical } = Astro.props;
const canonicalURL = canonical ?? new URL(Astro.url.pathname, Astro.site).toString();
---

<SEO
  title={title}
  description={description ?? "Your company Default description"}
  canonical={canonicalURL}
/>
